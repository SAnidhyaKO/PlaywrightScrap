  },
  "company_name": {
    "kind": "regex_scan",
    "sel": {
      "scan_css": "a,div,span",
      "pattern": "(followers|employee|Follow$|Company)"
    }
  },
  "location_block": {
    "kind": "regex_scan",
    "sel": {
      "scan_css": "div,span,li",
      "pattern": "(Remote|Hybrid|On-?site|[A-Za-z]+,\\s?[A-Za-z]+)"
    }
  },
  "job_description": {
    "kind": "css",
    "sel": "div#job-details"
  }
}